{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/sveltekit"
    },
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/digest",
      "schedule": "*/15 * * * *"
    }
  ]
} 